{
	"name": "Latino-Latinx",
	"version": "1.0",
	"description": "Replace the text 'Hispanic' and 'Latino' (or 'Latinx') with  'Latinx' (or 'Latino')",
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["content_script.js"],
			"run_at": "document_end"
		}],

	"icons": { 
		"16": "correction-tape_16x16.png",
		"32": "correction-tape_32x32.png",
		"48": "correction-tape_48x48.png",
	 "128": "correction-tape_128x128.png" },

	"browser_action": {
		"default_popup": "options.html",
		"default_icon": { 
			"16": "correction-tape_16x16.png",
			"32": "correction-tape_32x32.png",
			"48": "correction-tape_48x48.png",
		 "128": "correction-tape_128x128.png" }
	},

	"permissions": [
		"storage"
	], 
	
	"options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

	"manifest_version": 2
}